<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PsswdGn.MainPage">

    <AbsoluteLayout Margin="40">

        <Entry x:Name="PsswdField" IsPassword="True"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               AbsoluteLayout.LayoutBounds="0, 0, 250, 50"/>
        <Button Clicked="GenPassword" ImageSource="dice.png" AbsoluteLayout.LayoutBounds="255, 0, 50, 50"/>
        
        <Label Text="A-Z" AbsoluteLayout.LayoutBounds="30, 65, 50, 50"/>
        <CheckBox  AbsoluteLayout.LayoutBounds="50, 50, 50, 50" IsChecked="false" />

        <Label Text="0-9" AbsoluteLayout.LayoutBounds="95, 65, 50, 50"/>
        <CheckBox AbsoluteLayout.LayoutBounds="115, 50, 50, 50" IsChecked="false" />

        <Label Text="!@#" AbsoluteLayout.LayoutBounds="150, 65, 50, 50" />
        <CheckBox AbsoluteLayout.LayoutBounds="175, 50, 50, 50" IsChecked="false" />

        <Label Text="Tamaño de la contraseña" AbsoluteLayout.LayoutBounds="55, 125, 300, 50" />
        <Slider AbsoluteLayout.LayoutBounds="55, 100, 150, 50" Maximum="32" />
        
    </AbsoluteLayout>
</ContentPage>
